name = Bootstrap MartinVanWunnik
description = Bootstrap theme for martinvanwunnik.
version = 1.0
core = 7.x
base theme = bootstrap_base

; Regions
regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[content_bottom] = 'Content Bottom'
regions[footer]         = 'Footer'

; Panels layouts
plugins[panels][layouts] = layouts


; Stylesheets
; @todo check if we need this?
stylesheets[all][] =  less/style.less

stylesheets[all][] = bootstrap/css/bootstrap.css
stylesheets[all][] = css/overrides.css
stylesheets[all][] = css/layout.css
stylesheets[all][] = css/menu.css
stylesheets[all][] = css/style.css
stylesheets[all][] = css/content.css

